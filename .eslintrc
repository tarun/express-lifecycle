{
  "root": true,
  "env": {
    "browser": false,
    "node": true,
    "es6": false
  },

  // To give you an idea how to override rule options:
  "rules": {
    "quotes": [2, "single"],
    "eol-last": [0],
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0],
    "camelcase": [0, {"properties": "never"}]
  }
}
